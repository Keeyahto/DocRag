# Основные настройки приложения
APP_ENV=local
LOG_LEVEL=INFO

# Redis настройки
REDIS_URL=redis://redis:6379/0

# Embedding настройки
EMBED_BACKEND=sentence_transformers
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBED_BATCH_SIZE=64

# LLM настройки
LLM_BACKEND=ollama
LLM_MODEL=llama3:8b
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=512

# Chunking настройки
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP=64

# Поиск и ранжирование
TOP_K=5

# Ограничения файлов
MAX_FILE_MB=30
MAX_FILES_PER_REQUEST=3

# OpenAI настройки (опционально)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_BASE_URL=https://api.openai.com/v1

# Ollama настройки (опционально)
