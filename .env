# Основные настройки приложения
APP_ENV=local
LOG_LEVEL=INFO

# Redis настройки
REDIS_URL=redis://redis:6379/0

# Embedding настройки
EMBED_BACKEND=sentence_transformers
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBED_BATCH_SIZE=64

# LLM настройки
LLM_BACKEND=openai
LLM_MODEL=qwen/qwen3-4b-thinking-2507
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=4096

# Chunking настройки
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP=64

# Поиск и ранжирование
TOP_K=5

# Ограничения файлов
MAX_FILE_MB=30
MAX_FILES_PER_REQUEST=3

# OpenAI настройки (опционально)
OPENAI_API_KEY=dummy-key
OPENAI_BASE_URL=http://host.docker.internal:1234/v1

# Ollama настройки (опционально)
# OLLAMA_HOST=http://host.docker.internal:11434

# Telegram Bot настройки (опционально)
TELEGRAM_BOT_TOKEN=key